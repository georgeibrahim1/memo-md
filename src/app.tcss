.hidden {
    display: none;
}

#Question_Display_answerContainer {
    align: center middle;
}

IsTrueOrFalseModalScreen {
    align: center middle;
}

SessionClass {
    align: center middle;
}

ErrorModalScreen {
    align: center middle;
}

.Modal {
    grid-size: 2;
    grid-gutter: 1 2;
    grid-rows: 1fr 3;
    padding: 0 1;
    width: 60;
    height: 11;
}

.QuestionLabel {
    column-span: 2;
    height: 1fr;
    width: 1fr;
    content-align: center middle;
}

.ErrorLabel {
    column-span: 1;
    height: 1fr;
    width: 1fr;
    content-align: center middle;
}

